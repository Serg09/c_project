-@donation_creator.campaign.rewards.by_minimum_donation.each do |reward|
  %h3
    .radio
      %label{ for: "donation_amount_option_#{reward.id}" }
        =radio_button_tag 'donation[reward_id]', reward.id, id: "donation_amount_option_#{reward.id}"
        =number_to_currency(reward.minimum_donation, precision: 0)
        =reward.description

%h3
  .radio
    %label{ for: "donation_amount_option_choose" }
      =radio_button_tag 'donation[reward_id]', '', id: "donation_amount_option_choose"
      Choose your amount
.form-group{ class: form_group_class(@donation_creator, :amount) }
  =f.label :amount, class: 'control-label'
  =f.text_field :amount, class: 'form-control', autofocus: true, maxlength: 20
  =help_blocks @donation_creator, :amount
