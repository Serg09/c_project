=content_for :page_title do
  Make a donation!

.container.container-default
  =form_for([@campaign, @donation_creator]) do |f|
    .row
      .col-md-6
        .row
          .col-md-12
            .form-group{ :class => form_group_class(@donation_creator, :credit_card) }
              =f.label :credit_card, class: 'control-label'
              =f.text_field :credit_card, class: 'form-control', autofocus: true, autocomplete: 'off', maxlength: 20
              =help_blocks @donation_creator, :credit_card
            .form-group{ :class => form_group_class(@donation_creator, :credit_card_type) }
              =f.label :credit_card_type, 'Type', class: 'control-label'
              =f.select :credit_card_type, Payment::CREDIT_CARD_TYPES, {}, class: 'form-control'
              =help_blocks @donation_creator, :credit_card_type
        .row
          .col-md-6
            .form-group{ :class => form_group_class(@donation_creator, :expiration_month) }
              =f.label :expiration_month, class: 'control-label'
              =f.select :expiration_month, expiration_month_options, {}, class: 'form-control'
              =help_blocks @donation_creator, :expiration_month
          .col-md-6
            .form-group{ :class => form_group_class(@donation_creator, :expiration_year) }
              =f.label :expiration_year, class: 'control-label'
              =f.select :expiration_year, expiration_year_options, {}, class: 'form-control'
              =help_blocks @donation_creator, :expiration_year
        .row
          .col-md-6
            .form-group{ :class => form_group_class(@donation_creator, :cvv) }
              =f.label :cvv, 'CVV', class: 'control-label'
              =f.text_field :cvv, class: 'form-control', maxlength: 4
              =help_blocks @donation_creator, :cvv
      .col-md-6
        .row
          .col-md-6
            .form-group{ :class => form_group_class(@donation_creator, :first_name) }
              =f.label :first_name, class: 'control-label'
              =f.text_field :first_name, class: 'form-control'
              =help_blocks @donation_creator, :first_name
          .col-md-6
            .form-group{ :class => form_group_class(@donation_creator, :last_name) }
              =f.label :last_name, class: 'control-label'
              =f.text_field :last_name, class: 'form-control'
              =help_blocks @donation_creator, :last_name
        .row
          .col-md-12
            .form-group{ :class => form_group_class(@donation_creator, :address_1) }
              =f.label :address_1, 'Address', class: 'control-label'
              =f.text_field :address_1, class: 'form-control'
              =help_blocks @donation_creator, :address_1
            .form-group{ :class => form_group_class(@donation_creator, :address_2) }
              =f.label :address_2, 'Line 2', class: 'control-label'
              =f.text_field :address_2, class: 'form-control'
              =help_blocks @donation_creator, :address_2
        .row
          .col-md-4
            .form-group{ :class => form_group_class(@donation_creator, :city) }
              =f.label :city, class: 'control-label'
              =f.text_field :city, class: 'form-control'
              =help_blocks @donation_creator, :city
          .col-md-4
            .form-group{ :class => form_group_class(@donation_creator, :state) }
              =f.label :state, class: 'control-label'
              =f.text_field :state, class: 'form-control'
              =help_blocks @donation_creator, :state
          .col-md-4
            .form-group{ :class => form_group_class(@donation_creator, :postal_code) }
              =f.label :postal_code, class: 'control-label'
              =f.text_field :postal_code, class: 'form-control'
              =help_blocks @donation_creator, :postal_code
