=content_for :page_title do
  Make a donation!

.container.container-default
  .row
    .col-md-12
      %h1 Donate!
      %h2
        Support the book
        %i= @campaign.book.approved_version.title
        by
        =@campaign.book.author.full_name
        with a contribution.
  =form_for([@campaign, @donation_creator]) do |f|
    .row
      .col-md-4
        =render 'amounts_form_fields', f: f
      .col-md-4
        =render 'credit_card_form_fields', f: f
      .col-md-4
        .row
          .col-md-12
            .form-group{ :class => form_group_class(@donation_creator, :email) }
              =f.label :email, class: 'control-label'
              =f.text_field :email, class: 'form-control', maxlength: 256
              =help_blocks @donation_creator, :email
        .row
          .col-md-6
            .form-group{ :class => form_group_class(@donation_creator, :first_name) }
              =f.label :first_name, class: 'control-label'
              =f.text_field :first_name, class: 'form-control', maxlength: 50
              =help_blocks @donation_creator, :first_name
          .col-md-6
            .form-group{ :class => form_group_class(@donation_creator, :last_name) }
              =f.label :last_name, class: 'control-label'
              =f.text_field :last_name, class: 'form-control', maxlength: 50
              =help_blocks @donation_creator, :last_name
        .row
          .col-md-12
            =render 'address_form_fields', f: f
    .row
      .col-md-12
        =f.submit 'Submit', class: 'btn btn-primary'
