.form-group{ class: form_group_class(@reward, :description) }
  =f.label :description, class: 'control-label'
  =f.text_field :description, class: 'form-control', autofocus: true
  =help_blocks(@reward, :description)
.form-group{ class: form_group_class(@reward, :long_description) }
  =f.label :long_description, class: 'control-label'
  =f.text_area :long_description, class: 'form-control', rows: 3
  =help_blocks(@reward, :long_description)
.form-group{ class: form_group_class(@reward, :minimum_donation) }
  =f.label :minimum_donation, class: 'control-label'
  =f.number_field :minimum_donation, class: 'form-control', rows: 3, min: 1, step: 1
  =help_blocks(@reward, :minimum_donation)
.checkbox
  %label
    =f.check_box :physical_address_required
    Physical address required
=f.submit 'Save', class: 'btn btn-primary', title: 'Click here to save this reward.'
