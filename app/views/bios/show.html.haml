=content_for :page_title do
  Bio

.container.container-default
  .row
    .col-md-6
      -if can?(:update, @bio) && @bio.pending?
        .alert.alert-info
          This bio is under review. We will review it as soon as we can.

      %h1= @bio.author.full_name
      %p= @bio.text
      -if @bio.photo_id.present?
        %img{ src: image_path(@bio.photo_id) }

      -if @bio.usable_links.any?
        %h1 Social Links
        -@bio.usable_links.each do |link|
          =link_to link.url, target: '_blank' do
            =image_tag "social/#{link.site}.png"

      -if can? :update, @bio
        %p &nbsp;
        %p=link_to 'Edit', edit_bio_path(@bio), class: 'btn btn-default'
    -if administrator_signed_in?
      .col-md-2.btn-stack
        -unless @bio.approved?
          =button_to 'Approve', approve_bio_path(@bio), method: :patch, class: 'btn btn-success btn-block', title: 'Click here to approve the bio.'
        -unless @bio.rejected?
          =button_to 'Reject', reject_bio_path(@bio), method: :patch, class: 'btn btn-danger btn-block', title: 'Click here to reject the bio.'
  -if can? :index, Bio
    .row
      .col-md-6
        =link_to 'Back', bios_path, class: 'btn btn-default'
