=content_for :page_title do
  Authors

.container.container-default
  -@bio_rows.each do |row|
    .row
      -row.each do |bio|
        .col-md-5ths.author-record
          =link_to bio_path(bio) do
            -if bio.photo_id.present?
              %img.author-photo{ src: image_path(bio.photo_id), class: 'img-rounded img-responsive center-block' }
                .author-name.text-center
                  %span{ 'data-record-field' => 'first_name'}= bio.author.first_name
                  %span{ 'data-record-field' => 'last_name'}= bio.author.last_name
              .caption.text-center
                %small Visit This Author's Page
            -else
              =link_to bio_path(bio) do
                .naked-author-frame.author-name.img-rounded.center-block
                  %span{ 'data-record-field' => 'first_name'}= bio.author.first_name
                  %span{ 'data-record-field' => 'last_name'}= bio.author.last_name
                  .caption.text-center
                  %small Visit This Author's Page
