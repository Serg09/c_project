=content_for :page_title do
  Authors

.container.container-default
  .row
    .col-md-12
      -@bios.each do |bio|
        .author-record
          -if bio.photo_id.present?
            %img{ src: image_path(bio.photo_id), class: 'img-rounded img-responsive' }
          %span{ 'data-record-field' => 'first_name'}= bio.author.first_name
          %span{ 'data-record-field' => 'last_name'}= bio.author.last_name
