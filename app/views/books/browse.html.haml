=content_for :page_title do
  Books
.container.container-default
  -@books.each_slice(4) do |books|
    .row
      -books.each do |book|
        .col-md-3
          -if book.cover_image_id
            .book{ title: book.title }
              .author.sr-only= book.author.full_name
              .title.sr-only= book.title
              =link_to book_version_path(book.id) do
                .text-center
                  %span.text-center.author-name{ 'data-record-field' => 'Title'}= book.title
                %img.img-rounded.img-responsive{ src: image_path(book.cover_image_id), alt: book.title }
              %p.text-center Click the cover image above or the title belowe for more
              =link_to bio_path(book.author.active_bio) do
                .book-name.text-center
                  %span{ 'data-record-field' => 'Author'}= book.author.full_name
          -else
            =link_to book_version_path(book.id) do
              .book.naked-book
                .title= book.title
                .author= book.author.full_name
