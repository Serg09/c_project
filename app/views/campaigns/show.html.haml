=content_for :page_title do
  Campaign progress

.container.container-default
  .row
    .col-md-12
      %h2= @campaign.book.approved_version.title
  .row
    .col-md-6
      %table#campaign-progress-table.table
        %tr
          %th Goal
          %td.text-right= number_to_currency(@campaign.target_amount, precision: 0)
        %tr
          %th Donations
          %td.text-right= @campaign.donations.count
        %tr
          %th Raised
          %td.text-right= number_to_currency(@campaign.total_donated, precision: 0)
        %tr
          %th Still need
          %td.text-right= number_to_currency(@campaign.donation_amount_needed, precision: 0)
        %tr
          %th Days remaining
          %td.text-right= @campaign.days_remaining
