.form-group{ :class => form_group_class(@contribution_creator, :address_1) }
  =f.label :address_1, 'Address', class: 'control-label'
  =f.text_field :address_1, class: 'form-control', maxlength: 100
  =help_blocks @contribution_creator, :address_1
.form-group{ :class => form_group_class(@contribution_creator, :address_2) }
  =f.label :address_2, 'Line 2', class: 'control-label'
  =f.text_field :address_2, class: 'form-control', maxlength: 100
  =help_blocks @contribution_creator, :address_2
.row
  .col-md-4
    .form-group{ :class => form_group_class(@contribution_creator, :city) }
      =f.label :city, class: 'control-label'
      =f.text_field :city, class: 'form-control', maxlength: 50
      =help_blocks @contribution_creator, :city
  .col-md-4
    .form-group{ :class => form_group_class(@contribution_creator, :state) }
      =f.label :state, class: 'control-label'
      =f.text_field :state, class: 'form-control', maxlength: 2
      =help_blocks @contribution_creator, :state
  .col-md-4
    .form-group{ :class => form_group_class(@contribution_creator, :postal_code) }
      =f.label :postal_code, class: 'control-label'
      =f.text_field :postal_code, class: 'form-control', maxlength: 10
      =help_blocks @contribution_creator, :postal_code
