!!!
%html
  %head
    %title Crowdscribed Administration
    %link{ rel: 'icon', type: 'image/png', href: asset_path('crowdscribed_logo_cropped.png') }
    = stylesheet_link_tag    'application', media: 'all'
    = javascript_include_tag 'application'
    = csrf_meta_tags
    -if content_for :header
      =yield :header
  %body
    =render 'shared/admin_navigation'
    #admin-content
      -if content_for? :page_title
        .container
          .row
            .col-md-12
              %h1#page-title
                =yield :page_title
      =render 'flash' if flash.any? || flash_test?
      =yield
    %footer
      .container
        .row
          .col-md-12
            Crowdscribed 2014 | All Rights Reserved
    -if content_for :after_footer
      =yield :after_footer
