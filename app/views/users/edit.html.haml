=content_for :page_title do
  Profile

.container.container-default
  .row
    .col-md-6
      =form_for(@user) do |f|
        .form-group{ class: form_group_class(@user, :email) }
          =f.label :email, class: 'control-label'
          =f.email_field :email, class: 'form-control', autofocus: true
          =help_blocks @user, :email
        .form-group{ class: form_group_class(@user, :first_name) }
          =f.label :first_name, class: 'control-label'
          =f.text_field :first_name, class: 'form-control', autofocus: true
          =help_blocks @user, :first_name
        .form-group{ class: form_group_class(@user, :last_name) }
          =f.label :last_name, class: 'control-label'
          =f.text_field :last_name, class: 'form-control', autofocus: true
          =help_blocks @user, :last_name
        .form-group{ class: form_group_class(@user, :username) }
          =f.label :username, class: 'control-label'
          =f.text_field :username, class: 'form-control', autofocus: true
          =help_blocks @user, :username
        .form-group{ class: form_group_class(@user, :phone_number) }
          =f.label :phone_number, class: 'control-label'
          =f.text_field :phone_number, class: 'form-control', autofocus: true
          =help_blocks @user, :phone_number
        .checkbox
          %label
            =f.check_box :contactable
            OK to contact me
        .checkbox
          %label
            =f.check_box :subscribed
            I want to receive emails from Crowdscribed.
        =f.submit 'Save', class: 'btn btn-primary', title: 'Click here to save the changes to your profile.'
