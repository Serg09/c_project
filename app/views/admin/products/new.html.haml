=content_for :page_title do
  New Product for 
  %i= @book.public_title

.container.container-default
  .row
    .col-md-6
      =form_for([:admin, @book, @product]) do |f|
        .form-group{ class: form_group_class(@product, :caption) }
          =f.label :caption, class: 'control-label'
          =f.text_field :caption, class: 'form-control', autofocus: true
          =help_blocks @product, :caption
        .form-group{ class: form_group_class(@product, :sku) }
          =f.label :sku, 'SKU', class: 'control-label'
          =f.text_field :sku, class: 'form-control'
          =help_blocks @product, :sku
        =f.submit 'Save', class: 'btn btn-primary', title: 'Click here to save the product.'
        =link_to 'Back', admin_book_products_path(@book), class: 'btn btn-default', title: 'Click here to return to the list of products for this book.'
