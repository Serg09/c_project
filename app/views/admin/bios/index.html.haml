=content_for :page_title do
  Bios

.container.container-default
  .row
    .col-md-6
      =render_status_nav(Bio::STATUSES){|h| admin_bios_path h}
      %table#bios-table.table.table-striped
        %tr
          %th Author
          %th Date submitted
        -@bios.each do |bio|
          %tr
            %td= link_to bio.author.full_name, admin_bio_path(bio)
            %td= format_date(bio.created_at)
      =will_paginate @bios, renderer: BootstrapPagination::Rails
