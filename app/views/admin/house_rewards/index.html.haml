=content_for :page_title do
  Rewards

.container.container-default
  .row
    .col-md-6
      %table#rewards-table.table.table-striped
        %tr
          %th Description
          %th.text-center Address Req.?
          %th &nbsp;
        -@house_rewards.each do |house_reward|
          %tr
            %td= house_reward.description
            %td.text-center
              -if house_reward.physical_address_required?
                %span.glyphicon.glyphicon-check{ 'arial-hidden' => true }
              -else
                %span.glyphicon.glyphicon-unchecked{ 'arial-hidden' => true }
            %td
              .btn-group
                =link_to edit_admin_house_reward_path(house_reward), class: 'btn btn-info btn-xs edit-button', title: 'Click here to edit this reward.' do
                  %span.glyphicon.glyphicon-pencil{ 'arial-hidden' => true }
                =link_to admin_house_reward_path(house_reward), class: 'btn btn-danger btn-xs delete-button', title: 'Click here to edit this reward.', method: :delete, data: { confirm: 'Are you sure you want to delete this reward?' } do
                  %span.glyphicon.glyphicon-remove{ 'arial-hidden' => true }
      =link_to 'Add', new_admin_house_reward_path, class: 'btn btn-primary', title: 'Click here to add a new reward.'
