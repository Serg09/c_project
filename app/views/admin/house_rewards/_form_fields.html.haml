.form-group{ :class => form_group_class(@house_reward, :description) }
  =f.label :description, class: 'control-label'
  =f.text_field :description, class: 'form-control', autofocus: true
  =help_blocks @house_reward, :description
.form-group{ :class => form_group_class(@house_reward, :estimator_class) }
  =f.label :estimator_class, 'Estimation method', class: 'control-label'
  =f.select :estimator_class, estimator_class_options_for_select(@house_reward.estimator_class), {}, class: 'form-control', autofocus: true
  =help_blocks @house_reward, :estimator_class
.checkbox
  %label
    =f.check_box :physical_address_required
    Physical address required
=f.submit 'Save', class: 'btn btn-primary', title: 'Click here to save the reward.'
=link_to 'Back', admin_house_rewards_path, class: 'btn btn-default', title: 'Click here to return to the list of house rewards.'
