.form-group{ class: form_group_class(author, :first_name) }
  =f.label :first_name, class: 'control-label'
  =f.text_field :first_name, class: 'form-control', maxlength: 100, autofocus: true
  =help_blocks author, :first_name
.form-group{ class: form_group_class(author, :last_name) }
  =f.label :last_name, class: 'control-label'
  =f.text_field :last_name, class: 'form-control', maxlength: 100
  =help_blocks author, :last_name
=f.submit 'Save', class: 'btn btn-primary', title: 'Click here to save the author.'
