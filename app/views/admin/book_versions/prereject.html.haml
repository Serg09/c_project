-content_for :page_title do
  Reject
  %i #{h @book_version.title}

.container.container-default
  .row
    .col-md-6
      =form_for(@book_version, url: reject_admin_book_version_path(@book_version)) do |f|
        .form-group
          =f.label :comments, class: 'control-label'
          =f.text_area :comments, class: 'form-control', autofocus: true
          =help_blocks(@book_version, :comments)
        =f.submit 'Reject', class: 'btn btn-primary', title: 'Click here to reject the book.'
        =link_to 'Cancel', admin_book_version_path(@book_version), class: 'btn btn-default', title: 'Click to to return to the approval form.'
