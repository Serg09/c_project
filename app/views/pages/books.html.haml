=content_for :title_bar do
  Books
.container
  .row
    .col-md-12
      .grid
        -@books.each do |book|
          .grid-item{ class: book[:height] ? "grid-item--height#{book[:height]}" : nil }
            =link_to book[:url] do
              =figure_tag book[:image], alt: book[:title] do
                =book[:caption]

