@mixin center-block() {
  display: block;
  margin-left: auto;
  margin-right: auto;
}

#top-section {
  background-attachment: fixed;
  background-image: url(<%= asset_path 'guy_in_sport_coat.jpg' %>);
  background-position: left top;
  background-repeat: no-repeat;
  height: 550px;
}

.quote-image {
  @include center-block;
  margin-top: 200px;
}

.sign-up-btn {
  @include center-block;
  margin-top: 1em;
  padding: .8em 2em;
  width: 12em;
  text-transform: uppercase;
}
