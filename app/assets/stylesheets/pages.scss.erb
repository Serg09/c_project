@mixin center-block() {
  display: block;
  margin-left: auto;
  margin-right: auto;
}

@mixin section-background() {
  background-attachment: fixed;
  background-position: left top;
  background-repeat: no-repeat;
  background-size: cover;
}

section {
  padding: 3em 0;
}

#top-section {
  @include section-background;
  background-image: url(<%= asset_path 'guy_in_sport_coat.jpg' %>);
  height: 550px;
}

#middle-section {
  @include section-background;
  background-image: url(<%= asset_path 'city.jpg' %>);
  padding-bottom: 3em;
}

#bottom-section {
  @include section-background;
  background-image: url(<%= asset_path 'type.jpg' %>);
}

body {
  color: #fff;
  font-family: "Quicksand", Arial, Helvetica, sans-serif;
  font-size: 18px;
  line-height: 24px;
}

h1 {
  text-transform: capitalize;
  font-weight: 400;
  font-style: normal;
  font-size: 48px;
  line-height: 48px;
}

.larger {
  font-size: 26px;
  line-height: 27px;
}

.quote-image {
  @include center-block;
  margin-top: 200px;
}

.sign-up-btn {
  @include center-block;
  margin-top: 1em;
  padding: .8em 2em;
  width: 12em;
  text-transform: uppercase;
}

.help-image {
  margin-top: 2em;
  margin-bottom: 2em;
}

.pricing-table {
  margin-top: 4em;
  color: #333;
  h1 {
    font-family: "Quicksand", Arial, Helvetica, sans-serif;
    font-size: 18px
  }
  .price-column {
    width: 15em;
    float: left;
    border: solid 1px #000;
    text-align: center;
    background: #f4d0a1;

    .price-block {
      color: #62a2c4;
      font-size: 55px;
      font-family: "Quicksand", Arial, Helvetica, sans-serif;
      font-weight: bold;
      line-height: 20px;
      background: #fff;
      height: 2em;
      padding-top: 0.4em;
      span.currency {
        position: relative;
        font-size: 21px;
        font-weight: normal;
        color: #333;
        top: -1em;
        left: 0.8em;
      }
      span.super {
        position: relative;
        vertical-align: super;
        font-size: 17px;
        left: -16px;
        top: -10px;
      }

      .note {
        font-size: 11px;
        font-weight: normal;
        font-style: italic;
        color: #888888;
        line-height: 11px;
        position: relative;
        margin-left: -30px;
      }
    }
  }
}
